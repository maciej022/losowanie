<Window x:Class="WpfApp15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="SkyBlue">
        <GroupBox Header="Dane Pracownika" Margin="10,69,491,77">
            <StackPanel>
                <Label Content="Imie:" Width="38" HorizontalAlignment="Left"></Label>
                <TextBox x:Name="imietext" TextWrapping="Wrap" Text="" Width="120"/>

                <Label Content="Nazwisko:" HorizontalAlignment="Left"></Label>
                <TextBox x:Name="nazwiskotxt" TextWrapping="Wrap" Width="120"/>
                <Label Content="Stanowisko:" HorizontalAlignment="Left"></Label>
                <ComboBox x:Name="combobox" Width="120">
                    <ComboBoxItem Content="Kierownik"/>
                    <ComboBoxItem Content="Starszy programista"/>
                    <ComboBoxItem Content="Mlodszy programista"/>
                    <ComboBoxItem Content="Tester"/>
                </ComboBox>

            </StackPanel>

        </GroupBox>
        <GroupBox Header="Generowanie Hasła" Margin="421,69,36,77">
            <StackPanel>
                <Label Content="Ile znakow?" HorizontalAlignment="Left"></Label>
                <TextBox x:Name="ileznakowtxt" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <CheckBox x:Name="literycheck" Content="Male i duze Litery"/>
                <CheckBox x:Name="cyfrycheck" Content="Cyfry"/>
                <CheckBox x:Name="znakicheck" Content="Znaki specjalne"/>
                <Button x:Name="zatwierdzbtn" Content="Zatwierdz" Click="zatwierdzbtn_Click"/>

            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
